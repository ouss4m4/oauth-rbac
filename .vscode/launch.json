{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run TypeScript",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--import",
                "tsx"
            ],
            "program": "${workspaceFolder}/index.ts",
            "console": "integratedTerminal"
        },
        {
            "name": "Attach to TSX",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "restart": true,
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        
    ]
}